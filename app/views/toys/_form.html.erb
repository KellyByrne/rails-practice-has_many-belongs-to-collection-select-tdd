<%= form_for @toy do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cat %>
    <%= f.collection_select(:cat_id, Cat.all, :id, :name, {prompt: 'Select me now'}, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
